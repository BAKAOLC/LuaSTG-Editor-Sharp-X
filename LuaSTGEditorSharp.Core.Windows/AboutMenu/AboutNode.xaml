<Window x:Class="LuaSTGEditorSharp.Windows.AboutNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuaSTGEditorSharp.Windows"
        mc:Ignorable="d"
        Title="Help Window" Height="450" Width="1000" ResizeMode="NoResize" OpacityMask="#FF7C5353" BorderBrush="#FF340202" Background="White">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="974">
            <TabItem x:Name="Abouttab" Header="About">
                <Grid Background="#FFE5E5E5">
                    <Image Height="198" Margin="210,10,210,165" Width="348" Source="SplashScreen.png" StretchDirection="DownOnly" VerticalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="150" Width="948"><Run Text="LuaSTG Sharp Editor © "/><Run Text="czh098tom (Github) (https://github.com/czh098tom/LuaSTG-Editor-Sharp)"/><LineBreak/><Run Text="LuaSTG Sharp Editor X "/><Run Text="©"/><Run Text=" zinoLath &amp; RyannThi (Github) (https://github.com/zinoLath/LuaSTG-Editor-Sharp-X)"/><LineBreak/><Run/><LineBreak/><Run Text="This is a clone of the LuaSTG Editor Sharp repository with making more features that are compatible with LuaSTG-x"/><Run Text=" and other alterations"/><Run Text="."/><LineBreak/><Run Text="You can check the changes we've made already at our wiki page!"/><Run Text=" "/><Run Text="("/><Run Text="https://github.com/zinoLath/LuaSTG-Editor-Sharp-X/wiki"/><Run Text=")"/><LineBreak/><Run/><LineBreak/><Run Text="LuaSTG Editor Sharp is a unoffical LuaSTG Editor. Aim of the LuaSTG Editor Sharp is to develop a user-friendly, high extensive editor with higher eff"/><Run Text="i"/><Run Text="ciency. User interface is similar with offical one which is easy to master if user is familiar with old one. However, old projects are not supported due to different file format."/><LineBreak/><Run Text=""/></TextBlock>
                    <Image x:Name="zinoimg" HorizontalAlignment="Left" Height="82" Margin="115,25,0,0" VerticalAlignment="Top" Width="76" Source="zinopfp.png"/>
                    <Image x:Name="ryannimg" HorizontalAlignment="Left" Height="82" Margin="115,107,0,0" VerticalAlignment="Top" Width="76" Source="ryannthipfp.png"/>
                    <Image x:Name="tomimg" HorizontalAlignment="Left" Height="82" Margin="782,63,0,0" VerticalAlignment="Top" Width="76" Source="tompfp.png"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Generaltab" Header="General" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <TabControl HorizontalAlignment="Left" Height="327" Margin="10,36,0,0" VerticalAlignment="Top" Width="948">
                        <TabItem x:Name="foldertab" Header="Folder">
                            <Grid Background="#FFE5E5E5">
                                <TextBlock HorizontalAlignment="Left" Margin="44,10,0,0" TextWrapping="Wrap" Text="Folder node" VerticalAlignment="Top" Height="42" Width="888" FontSize="18" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Usage:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}"><Run Text="Folders are containers where you can organize materials."/><LineBreak/><Run Text="You can choose their name and where it will be, but that's basically the only use for them. "/></TextBlock>
                                <TextBlock HorizontalAlignment="Left" Margin="10,111,0,0" TextWrapping="Wrap" Text="Attention:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,140,0,-64" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Text="■&#x9; Folder will not influence any lua code. It is just for user to format code in GUI more easily."/>
                                <Label Content="Label" HorizontalAlignment="Left" Margin="936,53,0,0" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,169,0,0" TextWrapping="Wrap" Text="Example:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <Image HorizontalAlignment="Left" Height="96" Margin="10,193,0,0" VerticalAlignment="Top" Width="347" Source="folderexample.png" Stretch="UniformToFill"/>
                                <Image HorizontalAlignment="Left" Height="24" Margin="10,8,0,0" VerticalAlignment="Top" Width="25" Source="folder.png"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="codetab" Header="Code" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5">
                                <TextBlock HorizontalAlignment="Left" Margin="44,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="888" FontSize="18" FontFamily="Bahnschrift Light" TextDecorations="Underline"><Run Text="Code"/><Run Text=" node"/></TextBlock>
                                <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Usage:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Text="This function allow users to insert a piece of custom Lua code. Things in LuaSTG that can be done with editor nodes are generally doable through raw Lua code as well, so this offers another option to write some parts of script in raw code, as well as implementing things that can not be done with editor nodes. "/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,122,0,0" TextWrapping="Wrap" Text="Attention:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,149,0,-73" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Text="■&#x9; The editor can report uncompilable codes and prevent running, but it will not check exceptions since they happens at runtime. "/>
                                <Label Content="Label" HorizontalAlignment="Left" Margin="936,53,0,0" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,169,0,0" TextWrapping="Wrap" Text="Example:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline"/>
                                <Image HorizontalAlignment="Left" Height="96" Margin="10,193,0,0" VerticalAlignment="Top" Width="347" Source="codeexample.png" Stretch="UniformToFill"/>
                                <Image HorizontalAlignment="Left" Height="25" Margin="10,8,0,0" VerticalAlignment="Top" Width="25" Source="code.png"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="codetab_Copy" Header="Code Segment" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5">
                                <Label Content="Label" HorizontalAlignment="Left" Margin="936,53,0,0" VerticalAlignment="Top"/>
                                <ScrollViewer HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="942">
                                    <Grid Height="434" Width="922">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32*"/>
                                            <ColumnDefinition Width="429*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image x:Name="codeimg_Copy" HorizontalAlignment="Left" Height="26" Margin="8,8,0,0" VerticalAlignment="Top" Width="25" Source="code.png" RenderTransformOrigin="2.4,0.56"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="42,10,-8,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="888" FontSize="18" FontFamily="Bahnschrift Light" TextDecorations="Underline" Grid.ColumnSpan="2"><Run Text="Code"/><Run Text=" node"/></TextBlock>
                                        <TextBlock HorizontalAlignment="Left" Margin="8,38,0,0" TextWrapping="Wrap" Text="Usage:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline" Grid.ColumnSpan="2"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="8,66,-8,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Text="This function allow users to insert a piece of custom Lua code. Things in LuaSTG that can be done with editor nodes are generally doable through raw Lua code as well, so this offers another option to write some parts of script in raw code, as well as implementing things that can not be done with editor nodes. " Grid.ColumnSpan="2"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="8,122,0,0" TextWrapping="Wrap" Text="Attention:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline" Grid.ColumnSpan="2"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="8,149,-8,-70" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Text="■&#x9; The editor can report uncompilable codes and prevent running, but it will not check exceptions since they happens at runtime. " Grid.ColumnSpan="2"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="8,169,0,0" TextWrapping="Wrap" Text="Example:" VerticalAlignment="Top" Height="42" Width="888" FontSize="16" FontFamily="Bahnschrift Light" TextDecorations="Underline" Grid.ColumnSpan="2"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="10,198,-10,-119" TextWrapping="Wrap" VerticalAlignment="Top" Height="223" Width="922" FontSize="14" FontFamily="Bahnschrift Light" TextDecorations="{x:Null}" Grid.ColumnSpan="2"><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="aa"/><LineBreak/><Run Text="a"/><LineBreak/><Run Text="a"/><LineBreak/><Run/></TextBlock>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    <Image x:Name="folderimg" HorizontalAlignment="Left" Height="25" Margin="20,6,0,0" VerticalAlignment="Top" Width="25" Source="folder.png"/>
                    <Image x:Name="codeimg" HorizontalAlignment="Left" Height="25" Margin="64,6,0,0" VerticalAlignment="Top" Width="25" Source="code.png" RenderTransformOrigin="2.4,0.56"/>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
